#!/bin/bash
BASE=$(dirname $0)
SYSROOT="${BASE}/../../sysroot"
TARGET=arm-oe-linux-gnueabi
COMPILER_PATH="${SYSROOT}/usr/lib/${TARGET}/4.9.3"

exec env COMPILER_PATH="${COMPILER_PATH}" \
    	 "${BASE}/clang++" --target=${TARGET} \
        	             --sysroot="${SYSROOT}" \
            	         -isysroot "${SYSROOT}" \
                	     -L"${COMPILER_PATH}" \
                    	 --gcc-toolchain="${BASE}" \
                     "$@"
